@inject NavigationManager Navigation
@inject IHttpClientFactory HttpClientFactory
@inject AuthenticationStateProvider AuthenticationStateProvider
@rendermode InteractiveServer

@page "/resources"

<PageTitle>Resources</PageTitle>
    <style>
        .main-page {
            font-family: "Atkinson Hyperlegible Next", serif;
            font-optical-sizing: auto;
            font-style: normal;
            padding-top: 5%;
            padding-left: 2%;
            flex-direction: column;
            align-items: flex-start;
        }

         .welcome-text {
            color: #009995;
            font-size: 50px;
         }

    .stats-box {
        width: 300px;
        background-color: #ac3d6d;
        color: white;
        padding: 20px;
        display: flex;
        flex-direction: column;
        height: max-content;
        border-radius: 20px;
    }

    .stats-item-box {
        border-radius: 20px;
        padding: 15px;
        background-color: #d35667;
    }

    .stats-item-box:hover {
        transform: scale(1.1);
        box-shadow: 0px 10px 20px rgba(211, 86, 103, 0.4);
        background-color: #5A0027;
    } 

     </style>

<div class="main-page">
    <Navbar />
    <div>
         <AuthorizeView>
             <Authorized>
                  <div style="display: flex; height: 100vh;">
                    <div style="flex: 1; padding: 20px;">
                        <p class="welcome-text">
                            Resources
                        </p>
                        <div class="stats-box">
                            <br />
                            <p class="stats-item-box"> Generate Moods Summary </p>
                            <p class="stats-item-box"> Yoga and Meditation </p>
                            <p class="stats-item-box"> Habit Tracker </p>
                            <p class="stats-item-box"> Personalized Recommendations </p>
                        </div>

                    </div>

                    <h1 style="padding: 10%; color: #5A0027">
                        Select one of the options to get started.
                    </h1>
                  </div>
             </Authorized>
         </AuthorizeView>
    </div>
</div>

