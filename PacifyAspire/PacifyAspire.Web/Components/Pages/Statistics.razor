            list-style: none;
            padding: 0;
            margin: 0;
        }

            .stats-items-box ul li {
                margin-bottom: 5px;
            }

        .stats-items-box:nth-child(2n) {
            grid-column: span 2;
        }

        .stats-items-box:nth-child(3n) {
            grid-row: span 2;
        }

        .stats-items-box:nth-child(5n) {
            grid-column: span 1;
            grid-row: span 1;
        }

</style>

