        align-items: start;
        border-radius: 20px;
    }

    .stats-items-box {
        background-color: #303377;
        color: white;
        padding: 20px;
        display: flex;
        flex-direction: column;
        height: max-content;
        border-radius: 20px;
        word-wrap: break-word;
        min-height: 150px;
    }

