@inject ThoughtsController ThoughtsController
@inject NavigationManager Navigation
@inject IHttpClientFactory HttpClientFactory
@inject AuthenticationStateProvider AuthenticationStateProvider

@page "/view-mood"

<div class="main-page" style="@(ThoughtsController.thoughts != null ? $"background-image: url('{ThoughtsController.thoughts.Image}'); background-size: cover; background-position: center; background-repeat: no-repeat; min-height: 100vh;" : "")">
    <Navbar />
    <div>
        <AuthorizeView>
            <Authorized>
                <div style="display: flex; height: 100vh;">
                    <div style="flex: 1; padding: 20px;">
                        <p class="welcome-text">
                            All Moods
                        </p>

                        <style>
                            .allmoods-container {
                            background-color: #6366b4;
                            color: white;
                            padding: 20px;
                            border-radius: 20px;
                            }

                            .allmoods-item {
                            border-radius: 20px;
                            padding: 15px;
                            background-color: #989AC7;
                            }
                        </style>

                        <div class="allmoods-container">
                            <br />
                            <p class="allmoods-item"> Statistics </p>
                            <p class="allmoods-item"> Maya the bot </p>
                            <p class="allmoods-item"> Community </p>
                            <p class="allmoods-item"> Resources </p>
                            <p class="allmoods-item"> Account </p>
                        </div>
                    </div>
                </div>
            </Authorized>
            <NotAuthorized>
                <NotAuthorization />
            </NotAuthorized>
        </AuthorizeView>
    </div>
</div>
@code {

    protected override async Task OnInitializedAsync()
    {
        List<MoodLogs> allMoodLogs = new List<MoodLogs>();    
    }
}
